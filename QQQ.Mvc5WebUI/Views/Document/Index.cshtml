@model IEnumerable<QQQ.Mvc5WebUI.Models.DocumentListViewModel>

@{
    ViewBag.Title = "Document";
}

<div class="center">
  <a id="fullView" class="btn btn-warning" href="#"> Full View </a> 
    <a id="shortView" class="btn btn-warning" href="#"> Short View </a>
</div>

<h2>Document Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Count)
        </th>
        <th>
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contents)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Count)
        </td>
        <td>
            <span class="label label-success">
                Priorety 
                <span class="badge">@Html.DisplayFor(modelItem => item.Priority)</span>

            </span>
            
       
            <br />
            <span class="dateTitle">Date:</span>
            @Html.DisplayFor(modelItem => item.CreateDate)
            <br />
            <span class="dateTitle">Description:</span>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <span class="dateTitle">@Html.DisplayFor(modelItem => item.Title)</span> <br /><br />            
            <div hidden="hidden" class="content">
                @Html.Raw(item.Contents)
            </div>
        </td>
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id },new {target="_blank"}) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
@section Scripts{

    <script type="text/javascript">

        $(document).ready(function () {
            $(".dateTitle").click(function () {
                $(this).siblings(".content").toggle();
            });

            $("#fullView").click(function () {
                $(".content").show(500);
            });
            $("#shortView").click(function () {
                $(".content").hide(500);
            });
        });
       
       
    </script>
}